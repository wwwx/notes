.container {
  min-height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}

.main {
  flex: 1 1 auto;
}

.main-inner {
  margin: 0 auto;
  width: $content-desktop;

  +desktop-large() {
    width: $content-desktop-large;
  }

  +desktop-largest() {
    width: $content-desktop-largest;
  }
}

.content-wrap {
  +mobile() {
    padding: 0 20px;
  }
}

@import 'header';
@import 'sidebar';
@import 'footer';

@import 'mobile' if (hexo-config('mobile_layout_economy'));
